{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "noEmitOnError": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext",
  },
  "exclude": [
    "**/__tests__/*",
    "typings/browser.d.ts",
    "typings/browser",
    "node_modules"
  ],
  "include": ["src"]
}
